public class DiceGame {
   
   // properties
   Dice dice;
   
   // constructors
   public DiceGame()
   {
      dice = new Dice();
   }
   
   // methods
   
   /**
    * counting how many times it rolled
    * @return count
    */ 
   public int play()
   {
      //variables
      int count;
      
      //program code
      count = 1;
      do
      {
         count++;
         
      }while( dice.roll() != 12 );
      
      return count;
      
   }
   
}
